label
    display: block
    font-size: 18px
    font-weight: 500
    margin-bottom: 12px

input[type=text]
input[type=password]
input[type=email]
    width: 100%
    padding: 12px
    background: #fff
    border: 1px solid #ddd
    border-radius: 2px
    margin-bottom: 24px
    &:focus
        outline: 0

input[type=file]
    margin-bottom: 12px

textarea
    width: 100%
    background-color: #fff
    border: 1px solid #ddd
    border-radius: 2px
    resize: none
    min-height: 120px
    padding: 12px
    margin-bottom: 12px
    line-height: 1.5
    &:focus
        outline: 0

.form__group
    margin-bottom: 24px

.form__title
    font-size: 16px
    padding-bottom: 6px
    margin-bottom: 12px
    border-bottom: 1px solid #ddd

.form__helper
    margin-bottom: 18px
    display: block
    color: #999
    font-size: 13px

.form__footer
    padding-top: 24px

.upload
    cursor: pointer
    position: relative
    overflow: hidden
    display: block
    width: 100%
    height: 44px
    line-height: 44px
    background-color: #fafafa
    border: 1px solid #ddd
    text-align: center
    border-radius: 4px
    margin-bottom: 24px
    input[type=file]
        position: absolute
        left: -100%
